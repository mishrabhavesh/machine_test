


<div>
  <div class='col bg-info text-white'>

<% if article.errors.any? %>
<div class="">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class=" card bg-danger">
          <div class=card-header>
            <h2 class="card-title text-white">
              <%= pluralize(article.errors.count, "error") %></h2>
                <div class="card-body">
                  <ul>
                    <% article.errors.full_messages.each do |msg|%>
                    <li class="text-white"><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

    <%= form_for @article  do |f| %>

      <div class="form-group py-3 d-flex">
        <div class="col-sm-2 h3 text-right control-label">
          <%=f.label :title %>
        </div>
        <div class="col-sm-6">
          <%=f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>


  <div class="form-group py-3 d-flex">
    <div class="col-sm-2 h3 text-right control-label">
      <%= f.label :description %>
    </div>
    <div class="col-sm-8">
      <%= f.text_area :description ,rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>



  <div class="form-group py-3 d-flex">
    <div class="col-sm-2 h3 text-right control-label">
      <%= f.label :image %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :image ,rows: 10, class: "form-control", placeholder: "image" %>
    </div>
  </div>

  <div class="form-group py-3 d-flex">

    <div class="col-sm-8">
  <%= collection_select(:article,:category_id, Category.all, :id, :name) %>
    </div>
  </div>


  <div class="form-group text-center">
    <div class="col">
      <%= f.submit class: "btn btn-outline-light btn-primary btn-lg"  %>
    </div>
  </div>

  <div class="form-group text-center">
    <div class="col pb-4">
<%= link_to 'Cancel request and return to aricles listing', articles_path, class: "btn mt-4  btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
</div>